unit UnitExtends;

interface

type
  TAnimal = class //定义一个父类，一旦派生出多个子类，父类就具备了多态性
  private
    FWeight: Integer;
  public
    constructor create(FWeight: Integer);  //定义一个构造方法
    property Weight: integer read FWeight write FWeight;
  end;

  Tdog = class(TAnimal)    //定义一个子类（派生）,产生TAnimal的继承关系
  public
    constructor create();
  end;

  Tcat = class(TAnimal)   //定义一个子类（派生）,
  end;                    //产生对TAnimal的继承关系

implementation
{ TAnimal }

constructor TAnimal.create(FWeight: Integer);
begin
  Self.FWeight := FWeight;
end;

{ Tdog }

constructor Tdog.create;
begin
  Writeln('狗类');
  inherited create(51);  //继承父类TAnimal.create的方法
end;

end.

