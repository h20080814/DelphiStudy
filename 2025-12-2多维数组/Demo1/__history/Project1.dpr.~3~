program Project1;

{$APPTYPE CONSOLE}

{$R *.res}

uses
  System.SysUtils;
 {多维数组
    声明一个动态的二维数组
    type
      TStringDynamicArray = array of array of string;
    声明一个静态的二维数组
    type
    TStingStaticArray = array[0..3] of array[0..4] of string;

 }

type
  TStringDynamicArray = array of array of string;

type
  TStringStaticArray = array[0..3] of array[0..2] of string;

var
  StringDynamicArray: TStringDynamicArray;
  DynamicArrayIndexFirst: integer;
  DynamicArrayIndexFSecond: Integer;


//初始化动态的二维数组并遍历
procedure InitArray();
begin
  StringDynamicArray := [['你好', '中国', '母亲'], ['伟大', '祖国', '昌盛']];
  for DynamicArrayIndexFirst := Low(StringDynamicArray) to High(StringDynamicArray) do begin
    for DynamicArrayIndexFSecond := Low(StringDynamicArray[DynamicArrayIndexFirst]) to high(StringDynamicArray[DynamicArrayIndexFirst]) do begin
      Writeln(StringDynamicArray[DynamicArrayIndexFirst][DynamicArrayIndexFSecond]);
    end;
  end;
end;

begin
  InitArray();

  Readln;
end.

