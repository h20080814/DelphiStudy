program Project1;

{$APPTYPE CONSOLE}

{$R *.res}
{*------------------------------------------------------------------------------
  多态：一类事物以多种形态存在。例如：动物类和狗类、猫类的关系
  前提：两个类具备继承（派生）和实现这两种关系的一种。具体体现是父类接收或指向其子类对象
  面向对象主要有三个特征：封装、继承、多态
  作用：提高代码的复用性，方便我们对代码进行解耦（类和类之间不要出现直接的依赖关系）
-------------------------------------------------------------------------------}
uses
  System.SysUtils,
  Unit1 in 'Unit1.pas';

procedure ShowAnimalRun(Animal: TAnimal);
var
  Dog: TDog;
begin
  //运行时的数据类型
  Animal.Run; //向上转型：把子类对象的类型转换成了父类的数据类型
  //强制转换数据类型
  Dog := TDog(Animal);
  Dog.LookDoor; //向下转型：把父类对象的类型转换成子类的数据类型
end;
//var
  //Animal: TAnimal;
  //ColorDog: TColor;



begin
  ShowAnimalRun(TDog.create());  //狗在跑
  ShowAnimalRun(TCat.create());  //猫在跑
  //Animal := TDog.create();
  //Animal := TCat.Create();
