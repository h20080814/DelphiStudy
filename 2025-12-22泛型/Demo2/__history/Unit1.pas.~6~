unit Unit1;

interface

uses
  System.Generics.Collections, Unit2, Winapi.Windows, Winapi.Messages, System.SysUtils,
  System.Variants, System.Classes, Vcl.Graphics, Vcl.Controls, Vcl.Forms, Vcl.Dialogs,
  Vcl.StdCtrls;

type
  TForm1 = class(TForm)
    btnAdd: TButton;
    btnDel: TButton;
    btnFind: TButton;
    btnModify: TButton;
    btnEmpty: TButton;
    mmo1: TMemo;
    edtName: TEdit;
    procedure FormCreate(Sender: TObject);
    procedure btnFindClick(Sender: TObject);
    procedure btnAddClick(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  Form1: TForm1;
  StudentList: TList<TStudent>;   //学生列表

implementation

{$R *.dfm}

procedure TForm1.btnAddClick(Sender: TObject);
var
  Stu: TStudent;
begin
  mmo1.Lines.Clear;
  if edtName.Text <> '' then begin
    StudentList.Add(TStudent.Create(edtName.Text));
  end
  else begin
    MessageBox(Self.Handle, '姓名不能为空', '提示', MB_OK);
  end;
  for Stu in StudentList do begin
    mmo1.Lines.Add(Stu.Name);
  end;
end;

procedure TForm1.btnFindClick(Sender: TObject);
var
  Stu: TStudent;
begin
  for Stu in StudentList do begin
    mmo1.Lines.Add(Stu.Name);
  end;

end;

procedure TForm1.FormCreate(Sender: TObject);
begin
  StudentList := TList<TStudent>.Create;  //初始化学生列表
  StudentList.Add(TStudent.Create('张三'));
  StudentList.Add(TStudent.Create('李四'));
  StudentList.Add(TStudent.Create('王五'));
  StudentList.Add(TStudent.Create('赵六'));
  StudentList.Add(TStudent.Create('麻子'));
end;

end.

