{
procedure ForDemo();
var
  i: Integer;
begin
   for循环的标准写法,i从低到高
  for i := 0 to 10 do begin
    Writeln(i);
  end;
  Writeln('----------,', i); // i的输出值为High+1
  for循环的标准写法,i从高到低
  for i := 10 downto 1 do begin
    Writeln(i);
  end;
  Writeln('----------,', i); // i的输出值为Low-1
end;
}
{while语句是先判断再执行}
{procedure WhileDemo1();
var
  i: integer;
begin
  i := 0;
  while i < 10 do begin
    //for i := 0 to 10 do begin
    i := i + 1;

    if i = 3 then begin
      Writeln('跳出while循环');
      Break;
       //Continue ;
    end
    else begin
      Writeln(i);
    end;

    //end;
    Writeln('***********');
    //Continue ;
  end;

  Writeln('-----------');
end;

procedure WhileDemo();
var
  i: integer;
begin
  //while True do begin
  for i := 0 to 10 do begin

    if i = 3 then begin
      Writeln('跳出for循环');

      Continue;

    end;
    Writeln(i);
  end;


  //end;
end;

 {repeat until语句是先执行再判断，是取反的操作，即条件成立（true),
 只执行1次，条件不成立（false）,进行循环执行。}
{procedure RepeatDemo();
begin
  repeat


  until (True);
end;
