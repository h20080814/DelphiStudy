{1、求1-100所有整数的和1+2+3+4...+100=5050}

procedure SumCla();
var
  i, SumNum: Integer;
begin
  SumNum := 0;
  for i := 1 to 100 do begin
    SumNum := i + SumNum;
  end;
  Writeln(SumNum);
end;

{*------------------------------------------------------------------------------
  打印1-100之间所有是7的倍数的个数及总和
  （体会设置计数器的思想）

-------------------------------------------------------------------------------}
procedure Counter();
var
  i: Integer;
 //用来保存和
  SumNum: Integer;
 //用来保存个数
  CountNum: Integer;
begin
  SumNum := 0;
  CountNum := 0;
  for i := 1 to 100 do
    if (i mod 7) = 0 then begin
      SumNum := SumNum + i;
      CountNum := CountNum + 1;
    end;
  Writeln(SumNum, ',', CountNum);
end;
{输出所有的水仙花数，所谓水仙花数是指一个3位数，
其中各个位上数字立方和等于其本身。
例如：153=1*1*1+5*5*5+3*3*3}

procedure NarcissisticNumber();
var
//一个三位数本身
  NarcissisticNum: Integer;
//百位数位上的数字
  HundredNum: Integer;
//十位数位上的数字
  TenNum: Integer;
//个位数位上的数字
  OneNum: Integer;
  HundredNumResult, TenNumResult, OneNumResult: Integer;
begin

  for NarcissisticNum := 100 to 999 do begin
    HundredNum := NarcissisticNum div 100; //百位求商
    HundredNumResult := HundredNum * HundredNum * HundredNum;
    TenNum := (NarcissisticNum mod 100) div 10; //百位求余后十位求商
    TenNumResult := TenNum * TenNum * TenNum;
    OneNum := (NarcissisticNum mod 100) mod 10; // 百位求余后十位求余
    OneNumResult := OneNum * OneNum * OneNum;
    if NarcissisticNum = HundredNumResult + TenNumResult + OneNumResult then begin
      Writeln(NarcissisticNum);
    end;
  end;

end;
 {九九乘法表（直角三角形）}

procedure MultiplicationTable();
var
  row: Integer;   //行
  col: Integer;   //列
begin
   for row := 1 to 9 do
      begin
        for col := 1 to row do
        begin
         write(col,'X',row,'=',col*row,#09); // #09制表符（按一下Tab键）
        end;
        Writeln('');
      end;


end;

{输出正三角形}
procedure EquilateralTriangle();
  var
    row:Integer; //行
    col:Integer; //列
    str : string;
    I: Integer;

begin
str:='a'
  for row := 1 to 10 do
    begin
      for col := 1 to row do
        begin
          for I := 9 downto 1 do
            begin
              write(str);
            end;
         write('*');
         Writeln('');
        end;

      Writeln('');
    end;
end;
begin
  EquilateralTriangle();
  readln;

end.

